% define layout commands
  % define text layout
\newcommand\textline[3][t]{
  \par\smallskip\noindent\parbox[#1]{.15\textwidth}{\raggedright#2}
  \parbox[#1]{.85\textwidth}{#3}
}

\newcommand\translationline[2][t]{
  \par\smallskip\noindent\parbox[#1]{.15\textwidth}{\raggedright#2}
 % \parbox[#1]{.15\textwidth}{#2}
}

\newcommand\headline[7][t]{
  \par\smallskip\noindent\parbox[#1]{.14\textwidth}{#2}%{\raggedright#2}
  \hfill
  \parbox[#1]{.14\textwidth}{#3}
  \hfill
  \parbox[#1]{.14\textwidth}{#4}
  \hfill
  \parbox[#1]{.14\textwidth}{#5}
  \hfill
  \parbox[#1]{.3\textwidth}{#6}
  \hfill
  \parbox[#1]{.1\textwidth}{#7}
 % \parbox[#1]{.333\textwidth}{\raggedleft{4}}\par\smallskip
}

\newcommand\infoline[7][t]{
  \par\smallskip\noindent
  %\parbox[#1]{.14\textwidth}{#1}
  \parbox[#1]{.14\textwidth}{#2}
  \parbox[#1]{.14\textwidth}{#3}
  \parbox[#1]{.14\textwidth}{#4}
  \parbox[#1]{.14\textwidth}{#5}
  \parbox[#1]{.14\textwidth}{#6}
  \parbox[#1]{.14\textwidth}{#7}
%  \parbox[#1]{.14\textwidth}{#8}
}

