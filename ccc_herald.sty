\date{\today}
\renewcommand*{\maketitle}{
  \begin{titlepage}
    \def\@foot@er{}
    \thispagestyle{empty}
    \headline[t]{\printlocation} {\printtimeofevent} {\printduration} {Day: \printdayofevent} {Track: \printtrack} {\printlanguage}
    \par
    \hrulefill\par


    \infoline[t] {Name1: Nummer} {Name2: Nummer} {Name3: Nummer} {Name4: Nummer} {Name5: Nummer} {Name6: Nummer} {Name7: Nummer}
    \vspace{0.015\paperheight}
    \translationline[t] {Translation: \printtranslation}
    \par
    \hrulefill\par
    \vspace{0.015\paperheight}
    \textline[t] {\LARGE Title:} {\LARGE \textbf{\printtitle}}
    \textline[t] {Subtitle:} {\printsubtitle}
    \textline[t]{\large Speaker:} {\Large \textbf{\printspeaker}}
    \vspace{0.015\paperheight}
    \textline[t]{\textbf{Short:}} {\Large\textit{\printshorttext}}
  \end{titlepage}
}
